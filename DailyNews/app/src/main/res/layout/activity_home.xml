<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="#DDEB6A"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_180sdp"
                android:background="@drawable/home_top"
                android:layout_margin="@dimen/_5sdp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:orientation="horizontal">

                    <ImageView

                        android:layout_margin="@dimen/_2sdp"
                        android:layout_width="@dimen/_60sdp"
                        android:layout_height="@dimen/_60sdp"
                        android:src="@drawable/dailynews"
                        />



                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Welcome"
                    android:gravity="center"
                    android:textColor="#9C27B0"
                    android:textSize="@dimen/_18ssp"
                    android:textStyle="bold|italic"

                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:fontFamily="monospace"
                    android:textColor="#F0092C"
                    android:text="Daily News"
                    android:textSize="@dimen/_18ssp"
                    android:textStyle="bold|italic"

                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Visit Daily News to read the latest news headlines, reports, analysis, sports, entertainment, jobs, politics and business from around the world including Bangladesh"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_11ssp"


                    />


            </LinearLayout>


            <Button
                android:id="@+id/btnProthomAlo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp"
                android:backgroundTint="#8BC34A"
                android:textColor="#122BE0"
                android:text="প্রথম আলো"
                android:textSize="@dimen/_15ssp"
                android:textStyle="bold" />


            <Button
                android:id="@+id/btnBdnews"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp"
                android:backgroundTint="#8BC34A"
                android:textColor="#122BE0"
                android:text="BD News 24"
                android:textSize="@dimen/_15ssp"
                android:textStyle="bold" />

            <Button
                android:layout_margin="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#8BC34A"
                android:textColor="#122BE0"
                android:text="Dhaka Tribune"
                android:textSize="@dimen/_15ssp"
                android:textStyle="bold"
                />

            <Button
                android:layout_margin="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#8BC34A"
                android:textColor="#122BE0"
                android:text="ডয়চে ভেলে - DW"
                android:textSize="@dimen/_15ssp"
                android:textStyle="bold"
                />

            <Button
                android:layout_margin="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#8BC34A"
                android:textColor="#122BE0"
                android:text="The Business Standard"
                android:textSize="@dimen/_15ssp"
                android:textStyle="bold"
                />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp"
                android:backgroundTint="#8BC34A"
                android:textColor="#122BE0"
                android:text="Bonik Barta"
                android:textSize="@dimen/_15ssp"
                android:textStyle="bold" />

            <Button
                android:layout_margin="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#8BC34A"
                android:textColor="#122BE0"
                android:text="The Financial Express"
                android:textSize="@dimen/_15ssp"
                android:textStyle="bold"
                />

            <Button
                android:layout_margin="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#8BC34A"
                android:textColor="#122BE0"
                android:text="যায় যায় দিন"
                android:textSize="@dimen/_15ssp"
                android:textStyle="bold"
                />

            <Button
                android:layout_margin="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#8BC34A"
                android:textColor="#122BE0"
                android:text="The Daily Star"
                android:textSize="@dimen/_15ssp"
                android:textStyle="bold"
                />

            <Button
                android:layout_margin="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#8BC34A"
                android:textColor="#122BE0"
                android:text="The Daily Sun"
                android:textSize="@dimen/_15ssp"
                android:textStyle="bold"
                />

            <Button
                android:layout_margin="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#8BC34A"
                android:textColor="#122BE0"
                android:text="সমকাল"
                android:textSize="@dimen/_15ssp"
                android:textStyle="bold"
                />

            <Button
                android:layout_margin="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#8BC34A"
                android:textColor="#122BE0"
                android:text="বাংলাদেশ প্রতিদিন"
                android:textSize="@dimen/_15ssp"
                android:textStyle="bold"
                />

        </LinearLayout>

    </ScrollView>

</RelativeLayout>